{
	"compilerOptions": {
		"noEmit": true,
		"declaration": false,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ESNext"],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"target": "ESNext",
		"downlevelIteration": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"allowImportingTsExtensions": true,
		"paths": {
			"$*": ["./lib/*"]
		}
	},
	"exclude": ["dist/", "node_modules", "**/node_modules/*"]
}
